<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Me.createAccount.activity_me_register">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#303136"
        android:gravity="center">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp">
            <EditText
                android:id="@+id/nicknameReg_xml"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:hint="Nickname"
                android:textColorHint="#bdbec3"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:background="#383b42"
                android:paddingLeft="18dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="8dp">
            <EditText
                android:id="@+id/fullnameReg_xml"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:hint="Họ và tên"
                android:textColorHint="#bdbec3"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:background="#383b42"
                android:paddingLeft="18dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="8dp">
            <EditText
                android:id="@+id/passwordReg_xml"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:hint="Mật khẩu"
                android:textColorHint="#bdbec3"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:background="#383b42"
                android:paddingLeft="18dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="8dp">
            <EditText
                android:id="@+id/compassword_xml"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:hint="Xác nhận mật khẩu"
                android:textColorHint="#bdbec3"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:background="#383b42"
                android:paddingLeft="18dp"/>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/register_toMe_xml"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:backgroundTint="#ebebed"
            android:text="Đăng ký"
            android:textColor="#898b96"
            android:textStyle="bold"
            android:textSize="23dp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/activity_me_register_xml"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"/>
</RelativeLayout>